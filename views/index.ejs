<%- include('header') %>
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css"/>
    <link rel="stylesheet" href="../css/sb-admin-2.css"/>
    <title>Pesan Makanan</title>
  </head>
<body>
    <div class="container ">
        <h1 class="text-center text p-4 fw-bold d-flex justify-content-center">Buku Makanan</h1>
        <div class="addFood mx-5 text-left px-3 m-2">
           
        </div>
        <table class="table align-middle mb-0 bg-white tbl text-center">
            <thead class="bg-light bg-opacity-50">
                <tr>
                    <th>ID Makanan</th>
                    <th>Gambar Makanan</th>
                    <th>Nama Makanan</th>
                    <th>Harga</th>
                   
                </tr>
            </thead>
            <tbody>
                <% foods.forEach(food => { %>
                <tr>
                    <td>
                        <p class="fw-normal pt-4"><%= food.id %> </p>
                    </td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="../images/<%= food.image%>" style="width: 100px; height: 100px" class="rounded-circle" alt="Resto Tidak Memberi Gambar"/>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal pt-4"><%= food.name %></p>
                    </td>
                    <td>
                        <p class="fw-normal pt-4">Rp.
                        <%= food.price %>
                        </p>
                    </td>
                </tr>
              <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
