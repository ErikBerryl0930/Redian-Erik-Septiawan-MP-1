<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css"/>
    <link rel="stylesheet" href="/css/sb-admin-2.css"/>
    <title>Erik's Resto</title>
  </head>
<body>
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
    <!-- Add Food -->
    <div class="container ">
        <h1 class="text-center text-danger p-4 fw-bold d-flex justify-content-center">Form Ubah Status</h1>
        <div class="mx-5 px-5">
            <div class="mx-5 px-5">
                <form action="/admin/edit/<%= order.id %>" method="post" id="form">
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput">Id Pemesanan</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Customer Name" name="id" value="<%= order.id %>" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput">Ubah Status</label>
                        <select class="form-select" form="form" name="status">
                            <option selected><%= order.status %></option>
                            <option value="sampai">Selesai</option>
                            <option value="proses memasak">Proses Memasak</option>
                            <option value="ditolak">Ditolak</option>
                            <option value="dalam proses pengantaran">Dalam Proses Pengantaran</option>
                            <option value="pending">Antrean</option>     
                        </select>
                    </div>
                    <div class="mt-3">
                        <a href="/admin" class="btn bg-danger bg-opacity-50 shadow-sm text-white" type="submit"><i class="fa-solid fa-circle-left"></i> Kembali</a>
                        <button class="btn btn-success fw-bold text-white shadow-sm" type="submit">Kirim</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End of Add Food -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>