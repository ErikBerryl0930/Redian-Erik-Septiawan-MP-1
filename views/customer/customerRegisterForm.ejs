<%- include('./header') %>

<div class="container">
   

    <section class="intro m-5">
    <div class="mask d-flex align-items-center ">
        <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card" style="border-radius: 1rem;">
                <div class="card-body">

                <div class="my-md-4">

                    <h1 class="fw-bold text-warning text-center mb-4">Form Registrasi Pengguna Baru</h1>


                    <form action="/customers/register" method="post">
                        <div class="form-group mb-3">
                            <label for="formGroupExampleInput">Masukkan Nama</label>
                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Nama Anda" name="name">
                        </div>
                        <div class="form-group mb-3">
                            <label for="formGroupExampleInput2">Masukkan Password</label>
                            <input type="password" class="form-control" id="formGroupExampleInput2" placeholder="Password Anda" name="key">
                        </div>
                        <div class="form-group mb-3">
                            <label for="formGroupExampleInput">Masukkan Nomor Telephone</label>
                            <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Nomor Telephone Anda" name="phone">
                        </div>
                        <div class="form-group mb-3">
                            <label for="formGroupExampleInput2">Masukkan Alamat Anda</label>
                            <input type="text" class="form-control p-4" id="formGroupExampleInput2" placeholder="Alamat Anda" name="address">
                        </div>
                        <div>
                            <label class="form-label" for="image">Upload Gambar Anda</label>
                            <input type="file" class="form-control" id="image" name="image"/>
                        </div>
                        
                        <div class="mt-3 text-center">
                            <button class="btn btn-success fw-bold text-white shadow-sm" type="submit">Kirim</button>
                        </div>
                    </div>
                        
                    </form>
                    


                </div>

                <div>
                    <p class="mb-1 text-center">Apakah Anda Sudah Memiliki Akun Sebelumnya ? Jika Sudah Silahkan 
                        <a href="/customers/login" class="fw-bold text-warning">Login</a>
                    </p>
                </div>

                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
    </section>
</div>
    

