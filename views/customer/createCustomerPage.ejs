<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css"/>
    <link rel="stylesheet" href="../css/sb-admin-2.css"/>
    <title>Food Order</title>
  </head>
<body>
    <!-- Page Wrapper -->
    <div id="wrapper">
    <!-- Add Customer -->
    <div class="container ">
        <h1 class="text-center text p-4 fw-bold d-flex justify-content-center">Tambah Pelanggan Baru</h1>
        <div class="mx-5 px-5">
            <div class="mx-5 px-5">
                <form action="/customers/create" method="post">
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput">Masukkan Nama</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Nama" name="name">
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput2">Masukkan Password</label>
                        <input type="password" class="form-control" id="formGroupExampleInput2" placeholder="Password" name="key">
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput">Masukkan Nomor Telephone</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Nomor Telephone" name="phone">
                    </div>
                    <div class="form-group mb-3">
                        <label for="formGroupExampleInput2">Alamat</label>
                        <input type="text" class="form-control p-4" id="formGroupExampleInput2" placeholder="Alamat" name="address">
                    </div>
                    <div>
                        <label class="form-label" for="image">Upload Gambar Profil</label>
                        <input type="file" class="form-control" id="image"  name="image"/>
                    </div>
                    <div class="mt-3">
                        <a href="/customers" class="btn bg-danger bg-opacity-50 shadow-sm text-white" type="submit"><i class="fa-solid fa-circle-left"></i> Kembali</a>
                        <button class="btn btn-success fw-bold text-white shadow-sm" type="submit">Kirim</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End of Add Customer -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>