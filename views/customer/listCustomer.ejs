<body>
  

        

           

           

            
           
         

    </div>
    
 
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light p-3 mb-3 rounded">
        <div class="container-fluid ">
            <a class="navbar-brand fw-bold" href="#">
                <img src="../images/food.png" alt="" width = "70px"> Erik's Resto
            </a>
            <div class="navbar-nav">
                <a class="nav-link  fw-bold" aria-current="page" href="/admin">Order Makanan</a>
                <a class ="nav-link  fw-bold" href="/foods">Halaman Tambah Makanan</a>
                <a class="nav-link active fw-bold" href="/customers">Halaman Customer</a>
                <a class="nav-link fw-bold" href="/">LogOut</a>
            </div>
        </div>
    </nav>
    <!-- End of Navbar -->
    
    <!-- Tables -->
    
    <div class="container ">
        <h1 class="text-center text p-4 fw-bold d-flex justify-content-center">Daftar Akun</h1>
         <div class="addFood mx-5 text-left px-3 m-2">
            <a href="/customers/create" type="button" class="btn btn-info btn-sm btn-rounded mx-5 text-white shadow-sm fw-bold"><i class="fa-solid fa-circle-plus"></i>
            Tambah Pelanggan Baru
            </a>
        </div> 
       
       
        <table class="table align-middle mb-0 bg-white tbl">
            <thead class="bg-light bg-opacity-50">
                <tr>
                    <th class="text-center">ID Pelanggan</th>
                    <th>Nama Pelanggan</th>
                    <th>Nomor Telephone</th>
                    <th>Alamat</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(customer => { %>
                <tr>
                    <td>
                        <p class="fw-normal pt-4 text-center"><%= customer.id %> </p>
                    </td>
                    
                    <td>
                        <div class="d-flex align-items-center pt-3 custImg">
                            <img
                                src="../images/<%= customer.image%>"
                                alt="image not found"
                                style="width: 55px; height: 55px"
                                class="rounded-circle"
                                />
                            <div class="ms-3">
                                <p class="fw-bold mb-1"><%= customer.name %></p>
                            </div>
                        </div>
                    </td>            


                   
                    <td>
                        <p class="fw-normal pt-4"><%= customer.phone %></p>
                    </td>
                    <td>
                        <p class="fw-normal pt-4"><%= customer.address %></p>
                    </td>
                    <td>
                        <a href="/customers/edit/<%=customer.id%>" type="button" class="btn btn-success btn-sm btn-rounded mt-4 shadow-sm">
                        Edit
                        </a> 
                         <a href="/customers/delete/<%=customer.id%>" type="button" class="btn btn-danger btn-sm btn-rounded mt-4 shadow-sm">
                        Delete
                        </a>
                    </td>
                </tr>
              <% }) %>
            </tbody>
        </table>
    </div>
    <!-- End of Tables -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>